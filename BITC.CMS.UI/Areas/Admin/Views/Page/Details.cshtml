@model BITC.CMS.Data.Model.Page

    @{
        Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    }

    <div class="col-md-12">
        <form class="form-horizontal validate-form" method="post">
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.PageTitle, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PageTitle, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.PageTitle)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Url, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Url, new { @class = "form-control", placeholder = HttpContext.Current.Request.Url.Host })
                        @Html.ValidationMessageFor(m => m.Url)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Template, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().DropDownListFor(m => m.Template).BindTo(BITC.Web.Library.Utility.GetTemplate())
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Body, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @(Html.Kendo().EditorFor(m => m.Body)
                            .Tools(tools => tools
                                .Clear()
                                .Bold().Italic().Underline().Strikethrough()
                                .JustifyLeft().JustifyCenter().JustifyRight().JustifyFull()
                                .InsertUnorderedList().InsertOrderedList()
                                .Outdent().Indent()
                                .CreateLink().Unlink()
                                .InsertImage()
                                .SubScript()
                                .SuperScript()
                                .TableEditing()
                                .ViewHtml()
                                .Formatting()
                                .FontName()
                                .FontSize()
                                .FontColor().BackColor()
                                ))
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Keywords, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Keywords, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Inactive, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.CheckBoxFor(m => m.Inactive, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SortOrder, new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Kendo().NumericTextBoxFor(m => m.SortOrder).Name("SortOrder").Decimals(0).Step(1).Min(0).Format("n")
                    </div>
                </div>
            </div>
            <div class="form-actions fluid">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
    <script>

    </script>