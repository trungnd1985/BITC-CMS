@{
    IRepositoryAsync<BlogTag> _repo = DependencyResolver.Current.GetService<IRepositoryAsync<BlogTag>>();
    IRepositoryAsync<BlogEntry> _entryRepo = DependencyResolver.Current.GetService<IRepositoryAsync<BlogEntry>>();
    var _tag = Request.Params["tag"];
    var _culture = BITC.Web.Library.CultureHelper.GetCurrentCulture();
    var lstTag = _repo.Query(i => i.Culture == _culture);
    var _id = int.Parse(System.Text.RegularExpressions.Regex.Match(ViewContext.RouteData.Values["url"].ToString(), @"\d*$").Value);
    
    var _currentDate = DateTime.Now;
    var _entry = _entryRepo.Query(i => i.BlogEntryID == _id)
                                .Include(i => i.BlogTags).Select().FirstOrDefault();
    ViewBag.Title = _entry.BlogTitle;
                                
}
<!-- BEGIN BREADCRUMBS -->
<div class="row breadcrumbs margin-bottom-40">
    <div class="container">
        <div class="col-md-4 col-sm-4">
            <h1>@ViewBag.Title</h1>
        </div>
        <div class="col-md-8 col-sm-8">
            @ViewHelper.BreadCrumb(ViewBag.BreadCrumb)
        </div>
    </div>
</div>
<!-- END BREADCRUMBS -->
<!-- BEGIN CONTAINER -->
<div class="container min-hight">
    <!-- BEGIN BLOG -->
    <div class="row">
        <!-- BEGIN LEFT SIDEBAR -->
        <div class="col-md-9 blog-item margin-bottom-40">                        
